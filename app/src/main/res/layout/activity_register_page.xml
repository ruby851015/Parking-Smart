<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itshareplus.googlemapdemo.RegisterPage"
    android:orientation="vertical"
    android:background="#BBDEFB">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/parking_smart"/>

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="註冊新帳號"
            android:textColor="#99CCFF"
            android:textAlignment="center"
            android:textSize="30sp"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="帳號 Account"
            android:layout_marginLeft="35dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:hint="  請輸入您的信箱"
            android:textColorHint="#9E9E9E"
            android:background="@drawable/rounded_edittext_white"
            />

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="密碼 Password"
            android:layout_marginLeft="35dp"
            android:visibility="gone"
            />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:hint="  請設定您的密碼"
            android:textColorHint="#9E9E9E"
            android:background="@drawable/rounded_edittext_white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonNextStep"
                android:text="下一步"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_darkblue"
                android:textSize="7pt"
                android:layout_margin="3dp"
                android:textColor="#ffffff"/>
            <Button
                android:id="@+id/buttonBack"
                android:textAlignment="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_white"
                android:text="返回"
                android:textSize="7pt"
                android:layout_margin="3dp"
                android:textColor="#666666"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/textViewUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="請輸入您的名字"
                android:layout_marginLeft="35dp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/saveName"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:hint="  請輸入您的姓名"
                android:textColorHint="#9E9E9E"
                android:background="@drawable/rounded_edittext_white"/>

        </LinearLayout>


        <TextView
                android:id="@+id/textViewUserAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="請輸入您的地址"
                android:layout_marginLeft="35dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/saveAddress"
                android:layout_width="280dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:hint="  請輸入您的地址"
                android:textColorHint="#9E9E9E"
                android:background="@drawable/rounded_edittext_white"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/saveProvider"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonRegister"
                    android:layout_gravity="center"
                    android:text="完成註冊"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_darkblue"
                    android:textSize="7pt"
                    android:layout_margin="3dp"
                    android:textColor="#ffffff"/>

                <Button
                    android:id="@+id/buttonBack2"
                    android:textAlignment="center"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_edittext_white"
                    android:text="返回"
                    android:textSize="7pt"
                    android:layout_margin="3dp"
                    android:textColor="#666666"/>

            </LinearLayout>


    </LinearLayout>

</LinearLayout>
